#!/usr/bin/env python
import os
from os.path import join
from waflib.extras.gtest import summary
from waflib.extras.symwaf2ic import get_toplevel_path

def depends(ctx):
    ctx('haldls')
    ctx('halco', 'pyhalco')
    ctx('logger', 'pylogging')
    ctx('code-format')

def options(opt):
    opt.load('pytest')
    opt.load('pylint')
    opt.load('pycodestyle')

def configure(cfg):
    cfg.load('compiler_cxx')
    cfg.load('python')
    cfg.check_python_version()
    cfg.check_python_headers()
    cfg.load('pytest')
    cfg.load('genpybind')
    cfg.load('pylint')
    cfg.load('pycodestyle')

    if cfg.env.with_pybind:
        cfg.check(
            compiler='cxx',
            features='cxx pyembed',
            uselib_store='PYBIND11HALDLS',
            mandatory=True,
            header_name='pybind11/pybind11.h',
        )

def build(bld):
    bld.env.DLSvx_HARDWARE_AVAILABLE = "cube" == os.environ.get("SLURM_JOB_PARTITION")

    if not bld.env.with_pybind:
        bld.fatal('building pyhaldls requires pybind')

    bld(
        target='pystadls_vx',
        source='../include/stadls/vx/stadls.h',
        genpybind_tags='stadls_vx',
        features='genpybind cxx cxxshlib pyext pyembed',
        use=['stadls_vx', 'PYBIND11HALDLS', 'pylogging', 'pyhalco_hicann_dls_vx', 'pyhaldls_vx'],
        install_path='${PREFIX}/lib',
        linkflags='-Wl,-z,defs',
    )

    bld(
        name='pystadls_pbgenerator_vx',
        tests='test/pystadls_pbgenerator_vx.py',
        features='use pytest pylint pycodestyle',
        use=['pystadls_vx'],
        install_path='${PREFIX}/bin',
        pylint_config=join(get_toplevel_path(), "code-format", "pylintrc"),
        pycodestyle_config=join(get_toplevel_path(), "code-format", "pycodestyle"),
        test_timeout=120
    )

    bld(
        name='pystadls_hwtest_vx',
        tests='test/pystadls_hwtest_vx.py',
        features='use pytest pylint pycodestyle',
        use=['pyhalco_hicann_dls_vx', 'pystadls_vx', 'pyhaldls_vx', 'pyhalco_common_files'],
        install_path='${PREFIX}/bin',
        pylint_config=join(get_toplevel_path(), "code-format", "pylintrc"),
        pycodestyle_config=join(get_toplevel_path(), "code-format", "pycodestyle"),
        skip_run=not bld.env.DLSvx_HARDWARE_AVAILABLE,
        test_timeout=120
    )

    bld.add_post_fun(summary)
